<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- http://t.co/dKP3o1e -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "In The Room Print Co." %></title>
    
    <%= stylesheet_link_tag "normalize", "base" %>
    <%= stylesheet_link_tag "style", :media=>"(min-width:320px)" %>

    <!--[if (lt IE 9) & (!IEMobile)]>
      <%= stylesheet_link_tag "ie" %>
    <![endif]-->
   
    <%= javascript_include_tag  "all" %>
    
    <script type="text/javascript" src="http://use.typekit.com/fte2jpe.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>   

  </head>
  
  <body class="<%= page_classes %>">

    <div id="container">

      <header id="header">
      <h1 id="logo"><a href="/"><img src="/images/logo.png" /></a></h1>
      <p>Bespoke Hand-Printed Merchandise</p>
        <nav id="nav">
          <ul>
            <li><a href="#blog">Blog</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="#union">Union</a></li>
          </ul>
        </nav>
      </header><!-- /#header -->

      <div id="content">
        <%= yield %>
      </div><!-- /#content -->

      <footer id="footer">
        Copyright &copy; 2012 In The Room Print Co.
      </footer><!-- /#footer -->

    </div><!-- /#container -->
    
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-21435432-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>

  </body>
</html>
